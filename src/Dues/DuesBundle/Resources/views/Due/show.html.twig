{% extends "DuesBundle::template.html.twig" %}

{% block content -%}
    <h1>Due</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Amount{% endtrans %}</th>
                <td>{{ entity.amount }}</td>
            </tr>
            <tr>
                <th>{% trans %}Holder{% endtrans %}</th>
                <td>{{ entity.holderid }}</td>
            </tr>
            <tr>
                <th>{% trans %}Debtor{% endtrans %}</th>
                <td>{{ entity.debtorid }}</td>
            </tr>
            <tr>
                <th>{% trans %}Debt start{% endtrans %}</th>
                <td>{{ entity.startdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>{% trans %}Intrest adding start{% endtrans %}</th>
                <td>{{ entity.intreststart|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>{% trans %}Intrest rate (%){% endtrans %}</th>
                <td>{{ entity.intrestrate }}</td>
            </tr>
            <tr>
                <th>{% trans %}Due list name{% endtrans %}</th>
                <td>{{ entity.duelistid }}</td>
            </tr>
            <tr>
                <th>{% trans %}Intrest amount{% endtrans %}</th>
                <td>{{ entity.intrestamount }}</td>
            </tr>
            <tr>
                <th>{% trans %}Total debt{% endtrans %}</th>
                <td>{{ entity.totalamount }}</td>
            </tr>
        </tbody>
    </table>
   
    <ul class="record_actions">
        <li>
            <a href="{{ path('due') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('due_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
